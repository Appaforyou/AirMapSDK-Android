<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_time"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_wind"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_visibility" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visibility"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_temp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_dew_point"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dew_point"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <LinearLayout style="@style/AppTheme.WeatherLabel"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_weather_pressure"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure"
                android:gravity="center"
                android:textColor="@color/font_title"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>